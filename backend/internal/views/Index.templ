package views

const optionsNacio = "?limit=8"
const optionsLobsters = ""
const optionsHn = "?limit=15"
const optionsTheGuardian = "?limit=15"

templ Index() {
	@base() {
		<button
			class="auth-btn logout-btn"
			hx-boost="false"
			hx-post="/logout"
			hx-push-url="true"
			hx-swap="innerHTML"
			hx-target="body"
		>Logout</button>
		<button
			class="data-sources-btn"
			hx-post={ "/articles/lobsters" + optionsLobsters }
			hx-target="main"
			hx-swap="innerHTML"
			hx-indicator="#spinner_articles"
			hx-push-url="true"
		>
			Lobsters
			<span
				hx-get={ "/articles/lobsters/new" + optionsLobsters }
				hx-trigger="load, lobsters_settled from:body"
				hx-swap="innerHTML"
				hx-target="this"
				hx-push-url="false"
			></span>
		</button>
		<button
			class="data-sources-btn"
			hx-post={ "/articles/nacio" + optionsNacio }
			hx-target="main"
			hx-swap="innerHTML"
			hx-indicator="#spinner_articles"
			hx-push-url="true"
		>
			Naci√≥
			<span
				hx-get={ "/articles/nacio/new" + optionsNacio }
				hx-trigger="load, nacio_settled from:body"
				hx-swap="innerHTML"
				hx-target="this"
				hx-push-url="false"
			></span>
		</button>
		<button
			class="data-sources-btn"
			hx-post={ "/articles/hn" + optionsHn }
			hx-target="main"
			hx-swap="innerHTML"
			hx-indicator="#spinner_articles"
			hx-push-url="true"
		>
			HN
			<span
				hx-get={ "/articles/hn/new" + optionsHn }
				hx-trigger="load, hn_settled from:body"
				hx-swap="innerHTML"
				hx-target="this"
				hx-push-url="false"
			></span>
		</button>
		<img id="spinner_articles" class="htmx-indicator" src="/static/spinner.svg" alt="Request in flight"/>
		<main></main>
	}
}
